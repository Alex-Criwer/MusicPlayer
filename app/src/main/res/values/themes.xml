    <style name="Theme.MusicPlayerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MusicPlayerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
